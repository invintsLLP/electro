<section>
<div class="inv-bg_image" style={% if section.settings.image != blank %}"background-image:url('{{section.settings.image | img_url:"master"}}');background-size:cover;background-color:{{section.settings.bg_color}};{% endif %}">

</div>	
</section>
{% schema %}
  {
    "name": "Full Banner",
	"class":"inv-full-banner",
    "settings": [
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
		{
            "type":"color",
            "id":"bg_color",
            "label":"Background Color",
			"default":"#CCCCCC"
        },		
		{
			"type":"text",
			"id":"title",
			"label":"Title"
		},
		{
			"type":"textarea",
			"id":"subtitle",
			"label":"Sub Title"
		},
		{
			"type":"text",
			"id":"btn_text",
			"label":"Button Text"
		},
		{
			"type":"url",
			"id":"btn_url",
			"label":"Button Link"
		}
	],
    "presets" : [
      {
      "name" : "Full Banner"
      }	
    ]
  }
{% endschema %}