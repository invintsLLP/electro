<section>
<div class="inv-bg_image" style={% if section.settings.image != blank %}"background-image:url('{{section.settings.image | img_url:"master"}}');background-size:cover;background-color:{{section.settings.bg_color}};{% endif %}">
   {% if section.settings.title != blank or section.settings.description != blank %}
  <div class="inv-main-content"> 
    <div class="inv-inner-content">
      {% if section.settings.title != blank %}
      <h4>{{section.settings.title}}</h4>
      {% endif %}
      {% if section.settings.subtitle != blank %}
      <p>{{section.settings.subtitle}}</p>
      {% endif %}
      {% if section.settings.btn_text != blank or section.settings.btn_url != blank %}
      <div class="inv-btn-notbg">
      	<a href="{{section.settings.btn_url}}">{{section.settings.btn_text}}</a>
      </div>
      {% endif %}
    </div>
  </div>
   {% endif %}
</div>	
</section>
{% schema %}
  {
    "name": "fullbanner",
	"class":"inv-full-banner",
    "settings": [
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
		{
            "type":"color",
            "id":"bg_color",
            "label":"Background Color",
			"default":"#CCCCCC"
        },		
		{
			"type":"text",
			"id":"title",
			"label":"Title"
		},
		{
			"type":"textarea",
			"id":"subtitle",
			"label":"Sub Title"
		},
		{
			"type":"text",
			"id":"btn_text",
			"label":"Button Text"
		},
		{
			"type":"url",
			"id":"btn_url",
			"label":"Button Link"
		}
	],
    "presets" : [
      {
      "name" : "Full Banner"
      }	
    ]
  }
{% endschema %}