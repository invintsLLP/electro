<section>
<div class="inv-bg_image" style={% if section.settings.image != blank %}"background-image:url('{{section.settings.image | img_url:"master"}}');background-size:cover;background-color:{{section.settings.bg_color}};{% endif %}">
  <h2 style="font-weight:{{section.settings.font_weight}}">{{section.settings.main_title}}</h2>
  <div class="text-main-content">
    {% for block in section.blocks %}
    <div class="text-inner-content">
      <div class="text-inner-image">
        {% if block.settings.image != blank %}
        <img src="{{block.settings.image | img_url:'master'}}">
        {% endif %}
      </div>
      <div class="text-inner-description">
        {% if block.settings.title != blank %}
        <h2>{{block.settings.title}}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
        <p>{{block.settings.description}}</p>
      {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>	
</section>
{% schema %}
  {
    "name": "fullbanner",
	"class":"inv-full-banner",
    "settings": [
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
		{
            "type":"color",
            "id":"bg_color",
            "label":"Background Color",
			"default":"#CCCCCC"
        },		
		{
			"type":"text",
			"id":"main_title",
			"label":"Main Title"
		}
	],
    "presets" : [
      {
      "name" : "Full Banner"
      }	
    ]
  }
{% endschema %}