<section>
<div class="inv-bg_image" style={% if section.settings.image != blank %}"background-image:url('{{section.settings.image | img_url:"master"}}');background-size:cover;background-color:{{section.settings.bg_color}};{% endif %}">
  <div class="inv-main-content"> 
    <div class="inv-inner-content">
        {% if block.settings.title != blank %}
        <h2>{{block.settings.title}}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
        <p>{{block.settings.description}}</p>
      {% endif %}
    </div>
  </div>
</div>	
</section>
{% schema %}
  {
    "name": "fullbanner",
	"class":"inv-full-banner",
    "settings": [
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
		{
            "type":"color",
            "id":"bg_color",
            "label":"Background Color",
			"default":"#CCCCCC"
        },		
		{
			"type":"text",
			"id":"main_title",
			"label":"Main Title"
		}
	],
    "presets" : [
      {
      "name" : "Full Banner"
      }	
    ]
  }
{% endschema %}