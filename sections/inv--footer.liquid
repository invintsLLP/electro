          {% if block.settings.newsletter_heading != blank %}<h4 {%  if block.settings.text_color != blank %}style="color:{{block.settings.text_color}};"{% endif %}>{{block.settings.newsletter_heading}}</h4>{% endif %}
        </div>
        {% endif %}
        <div class="inv--newsletter-form">
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                     id="NewsletterForm--{{ section.id }}"
                     type="email"
                     name="contact[email]"
                     class="field__input"
                     value="{{ form.email }}"
                     aria-required="true"
                     autocorrect="off"
                     autocapitalize="off"
                     autocomplete="email"
                     {% if form.errors %}
                     autofocus
                     aria-invalid="true"
                     aria-describedby="ContactFooter-error"
                     {% elsif form.posted_successfully? %}
                     aria-describedby="ContactFooter-success"
                     {% endif %}
                     placeholder="{{ 'newsletter.label' | t }}"
                     required
                     >
              <label class="field__label" for="NewsletterForm--{{ section.id }}">
                {{ 'newsletter.label' | t }}
              </label>
              <button type="submit" class="newsletter-form__button" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
              {% comment %}  {% render 'icon-arrow' %} {% endcomment %}Subscribe
              </button>
            </div>
            {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
            {%- endif -%}
          </div>
          {%- if form.posted_successfully? -%}
          <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
          {%- endif -%}
          {%- endform -%}
        </div>
      </div>
      {% endif %}
      {% endif %}
      {% endfor %}
      {% endif %}
    </div>
  </div>
   {%- if section.blocks.size > 0 -%}
  <div class="inv--footer-main" style="background: #F5F5F5; color: #777777;">   
      <div class="inv--logo-section">       
        {% for block in section.blocks %}
        {% if block.type == 'logo' %}
        {% if block.settings.svg_logo != blank or block.settings.logo_image != blank %}

        <div class="inv--logo-icon">
          {% if block.settings.svg_logo != blank %}
          <span>
            {{block.settings.svg_logo}}
          </span>
          {% else %}
          <div class="inv--logo-image">
            <img src="{{block.settings.logo_image | img_url:"master"}}" alt="{{block.settings.logo_image}}" class="layload">
          </div>
          {% endif %}
        </div>
        {% endif %}
        {% endif %}
        {% endfor %}        
      </div>
    <div class="inv--conatct-linklist">
      <div class="container">
         <div class="inv--conatct-linklist-inner">
        {% for block in section.blocks %}
        {% if block.type == 'logo-contact' %}
        {% if block.settings.svg_logo != blank or block.settings.logo_image != blank %}

        <div class="inv--logo-contact">        
          <div class="inv--logo-footer">
            <a href="{{shop.url}}">
            {% if block.settings.svg_logo != blank %}
            <span>
              {{block.settings.svg_logo}}
            </span>
            {% else %}
            <div class="inv--logo-image">
              <img src="{{block.settings.logo_image | img_url:"master"}}" alt="{{block.settings.logo_image}}" class="layload">
            </div>
            {% endif %}
            </a>
          </div>
          {% if block.settings.contact_location_icon != blank or block.settings.location_text != blank or  block.settings.contact_mail_icon != blank or block.settings.mail_text != blank or block.settings.contact_phone_icon != blank or block.settings.phone_text != blank %}
          <div class="inv--contact-main">
            <ul class="inv--contact">
              {% if block.settings.contact_location_icon != blank or block.settings.location_text != blank %}
              <li class="inv--contact-location">
                <span>{{block.settings.contact_location_icon}}</span>
                <span class="visually-hidden">Location</span>
                <h4>{{block.settings.location_text}}</h4>
              </li>
              {% endif %}
              {% if block.settings.contact_mail_icon != blank or block.settings.mail_text != blank %}
              <li class="inv--contact-mail">
                <span>{{block.settings.contact_mail_icon}}</span>
                <span class="visually-hidden">Contact</span>
                <h4><a href="mailto:{{block.settings.mail_text}}">{{block.settings.mail_text}}</a></h4>
              </li>
              {% endif %}
              {% if block.settings.contact_phone_icon != blank or block.settings.phone_text != blank %}
              <li class="inv--contact-phone">
                <span>{{block.settings.contact_phone_icon}}</span>
                 <span class="visually-hidden">Phone</span>
                <h4><a href="tel:{{block.settings.phone_text}}">{{block.settings.phone_text}}</a></h4>
              </li>
              {% endif %}
            </ul>
          </div>
          {% endif %}
          {% if block.settings.show_social %}
          <div class="inv--social">
            <ul class="footer__list-social list-unstyled list-social" role="list">
              {%- if settings.social_twitter_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_twitter_link }}" class="link list-social__link" >
                  {%- render 'icon-twitter' -%}
                  <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_facebook_link }}" class="link list-social__link" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_instagram_link }}" class="link list-social__link" >
                  {%- render 'icon-instagram' -%}
                  <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_linkedin_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_linkedin_link }}" class="link list-social__link" >
                  {%- render 'icon-linkedin' -%}
                  <span class="visually-hidden">{{ 'general.social.links.linkedin' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_google_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_google_link }}" class="link list-social__link" >
                  {%- render 'icon-google' -%}
                  <span class="visually-hidden">{{ 'general.social.links.google' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_pinterest_link }}" class="link list-social__link" >
                  {%- render 'icon-pinterest' -%}
                  <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                </a>
              </li>
              {%- endif -%}

              {%- if settings.social_tiktok_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_tiktok_link }}" class="link list-social__link" >
                  {%- render 'icon-tiktok' -%}
                  <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_tumblr_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_tumblr_link }}" class="link list-social__link" >
                  {%- render 'icon-tumblr' -%}
                  <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_snapchat_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_snapchat_link }}" class="link list-social__link" >
                  {%- render 'icon-snapchat' -%}
                  <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_youtube_link }}" class="link list-social__link" >
                  {%- render 'icon-youtube' -%}
                  <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                </a>
              </li>
              {%- endif -%}
              {%- if settings.social_vimeo_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_vimeo_link }}" class="link list-social__link" >
                  {%- render 'icon-vimeo' -%}
                  <span class="visually-hidden">{{ 'general.social.links.vimeo' | t }}</span>
                </a>
              </li>
              {%- endif -%}

            </ul>
          </div>
          {% endif %}
        </div>
        {% endif %}
        {% endif %}
        {% endfor %}
         <div class="inv--linklist-col">
        {% for block in section.blocks %}
        {% if block.type == 'linklist' %}
        <div class="inv--linklist inv--linklist--{% cycle 'one', 'two', 'three' ,'four' %}">
          <h4>{{ linklists[block.settings.link_list_1].title }}<svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1L4.90695 5L9 1" stroke="white" stroke-linecap="round"></path></svg></h4>
          <ul class="inv--linklist-main">
            {%- for link in block.settings.link_list_1.links -%}
            <li>
              <a href="{{ link.url }}" class="inv-links {% if link.active %} inv-list-menu__item--active{% endif %}">
                {{ link.title }}
              </a>
            </li>
            {%- endfor -%}
          </ul>
        </div>
        {% endif %}    
        {% endfor %}
           </div>
        </div>
    </div>   
    </div>
  </div>
   {% endif %}
  {% if section.settings.copyright_text != blank or section.settings.display_payment_methods != blank %}
  <div class="inv--footer-bottom" style="background: #F5F5F5; color: #777777;">
    <div class="container">
  	<div class="inv--footer-copy">
      <div class="inv--footer-copy-payment">
        <p class="credits">
          Copyright 
          &copy; {{ "now" | date: "%Y" }} {{ shop.name | link_to: '/' }}.
          {{ section.settings.copyright_text }}
        </p>
      </div>
        {% if section.settings.display_payment_methods %}
          <div class="payment_methods">
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class:'payment-icon' }}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
   {% endif %}
</footer>

{% schema %}
  {
    "name": "Footer",
	"class":"inno-footer",
    "settings": [
        {
          "type": "richtext",
          "id": "copyright_text",
          "label": "Copyright text"
        },
        {
          "type": "checkbox",
          "id": "display_payment_methods",
          "label": "Show payment method icons",
          "default": true
        }
      ],
  "blocks": [
  {
    "type": "newsletter",
    "name": "Newsletter",
    "settings": [
        {
          "type": "checkbox",
          "id": "newsletter_enable",
          "default": true,
          "label": "Newsletter Enable"
        },
        {
          "type": "text",
          "id": "newsletter_heading",
          "default": "Subscribe to our emails",
          "label": "Newsletter Heading"
        },
		{
          "type": "color",
