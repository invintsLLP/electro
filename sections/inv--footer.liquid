		{
          "type": "text",
          "id": "mail_text",
          "label": "Mail"
        },
		{
          "type": "textarea",
          "id": "contact_phone_icon",
          "label": "Phone SVG(Code)"
        },
		{
          "type": "text",
          "id": "phone_text",
          "label": "Phone"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "default": false,
